# Status Bar:
bar {
    position bottom
    status_command i3status
    tray_output primary
    i3bar_command i3bar --transparency
    padding 0px

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

gaps inner 5

